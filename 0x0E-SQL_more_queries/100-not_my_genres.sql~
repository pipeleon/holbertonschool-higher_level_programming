--   script that lists all genres from hbtn_0d_tvshows and displays the number of shows linked to each
SELECT tv_genres.name, tv_shows.title FROM tv_genres LEFT JOIN tv_show_genres ON tv_genres.id = tv_show_genres.genre_id LEFT JOIN tv_shows ON tv_show_genres.show_id = tv_shows.id WHERE tv_shows.title<>'Dexter' AND tv_genres.name NOT IN (SELECT tv_genres.name FROM tv_genres INNER JOIN tv_show_genres ON tv_genres.id = tv_show_genres.genre_id INNER JOIN tv_shows ON tv_show_genres.show_id = tv_shows.id WHERE tv_shows.title='Dexter' GROUP BY tv_genres.name ORDER BY tv_genres.name ASC
) ORDER BY tv_genres.name ASC
